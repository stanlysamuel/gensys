/*
**Critical Sections Program**
  Encoding fairness: AG ((pc1=3 -> AF pc1=4) /\ (pc1=7 -> AF pc1=8) /\ (pc2=3 -> AF pc2=4) /\ (pc2=6 -> AF pc2=7))
Process A
1  flag1A = true;
2  turn1B = false;
3  while(flag1B && turn1B);
4  x=x&&y; **********
   flag1A = false;
5  if(turn1B){
       flag2A = true;
6      turn2B = true;
7      while(flag2B && turn2B);
8      y = false; *************
       flag2A = false;}
9  goto 1;
Process B
1  flag1B = true;
2  turn1B = false;
3  while(flag1A && !turn1B);
4  x=x&&y; **********
   flag2B = true;
5  turn2B = false;
6  while(flag2A && !turn2B);
7  y=!y; ******************
   x=x||y;
   flag2B = false;
8  flag1B = false;
9  goto 1;
*/
init(F1A,F1B,T1B,F2A,F2B,T2B,K1,K2,PC1,PC2):=F1A=0,F1B=0,T1B=0,F2A=0,F2B=0,T2B=0,K1=2,K2=2,PC1=1,PC2=1.
