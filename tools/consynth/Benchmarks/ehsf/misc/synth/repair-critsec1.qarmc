   	phi(F1A,F1B,T1B,F2A,F2B,T2B,K1,K2,PC1,PC2,_),next(F1A,F1B,T1B,F2A,F2B,T2B,K1,K2,PC1,PC2,A,F1Ap,F1Bp,T1Bp,F2Ap,F2Bp,T2Bp,K1p,K2p,PC1p,PC2p).
